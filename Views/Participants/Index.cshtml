@model IEnumerable<GestionFormation.Models.Participants>

@{
    ViewData["Title"] = "Participants";
}

<h1>Paricipants</h1>

<p>
    <a asp-action="Create">Ajouter un participant</a>
</p>

<form class="form-inline my-2 my-lg-0" asp-action="Search" asp-controller="Participants">
    <p>
        <input size="30" placeholder="tapez un Nom" type="search" name="name" />
        <select asp-items="ViewBag.FormationID" name="Formationid" size=1.5 style="width:300px ;
height:30px"></select>
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Recherche</button>
    </p>
</form>
<a asp-action="Index" asp-controller="Participants"> Tous les participants</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ParticipantsName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Formation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ParticipantsName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Formation.FormationID)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ParticipantsId">Modifier</a> |
                    <a asp-action="Details" asp-route-id="@item.ParticipantsId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ParticipantsId">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
